<body style="background-image: url(./public/assets/media/misc/bg_1.jpg)" class="kt-login-v1--enabled kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--transparent kt-aside--enabled kt-aside--fixed kt-page--loading">

    <!-- begin:: Page -->
    <div class="kt-grid kt-grid--ver kt-grid--root">
        <div class="kt-grid__item  kt-grid__item--fluid kt-grid kt-grid--hor kt-login-v1" id="kt_login_v1">

            <!--begin::Item-->
            <div class="kt-grid__item">

                <!--begin::Heade-->
                <div class="kt-login-v1__head">
                    <div class="kt-login-v1__logo">
                        <a href="#">
                            <img src="~/public/assets/media/logos/logo.png" alt="" />
                        </a>
                    </div>
                    <div class="kt-login-v1__signup">
                        <h4 class="kt-login-v1__heading">
                            Bienvenido
                        </h4>
                        <a href="#" target="_blank">Gila Software</a>
                    </div>
                </div>

                <!--begin::Head-->
            </div>

            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item  kt-grid kt-grid--ver  kt-grid__item--fluid">

                <!--begin::Body-->
                <div class="kt-login-v1__body">

                    <!--begin::Section-->
                    <div class="kt-login-v1__section">
                        <div class="kt-login-v1__info">
                            <h3 class="kt-login-v1__intro">Sistema Integral Registros (SIR).</h3>
                            <p>Sistema para Gila Software.</p>
                        </div>
                    </div>

                    <!--begin::Section-->
                    <!--begin::Separator-->
                    <div class="kt-login-v1__seaprator"></div>

                    <!--end::Separator-->
                    <!--begin::Wrapper-->
                    <div class="kt-login-v1__wrapper">
                        <div class="kt-login-v1__container">
                            <h3 class="kt-login-v1__title">
                                Iniciar sesión
                            </h3>

                            <!--begin::Form-->
                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "kt-login-v1__form kt-form", role = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <input type="email" name="NombreUsuario" class="form-control" placeholder="email@tudominio.com" required="" autocomplete="off" value="">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control" placeholder="password" required="" autocomplete="off" value="">
                                </div>
                                <div class="kt-login-v1__actions">
                                    <spa></spa>
                                    <button type="submit" id="btnLogin" name="btnLogin" class="btn btn-brand btn-elevate btn-pill">Ingresar</button>
                                </div>
                            }

                            <!--end::Form-->
                        </div>
                    </div>

                    <!--end::Wrapper-->
                </div>

                <!--begin::Body-->
            </div>

            <!--end::Item-->
            <!--begin::Item-->
            <div class="kt-grid__item">
                <div class="kt-login-v1__footer">
                    <div class="kt-login-v1__menu">
                        <a href="#" target="_blank">Acerca</a>
                        <a href="#" target="_blank">Contacto</a>
                    </div>

                    <div class="kt-login-v1__copyright">
                        <a href="#" target="_blank" class="kt-link">&copy; 2021 HSOFT Inc.</a>
                    </div>
                </div>
            </div>

            <!--end::Item-->
        </div>
