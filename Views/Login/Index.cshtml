    <script>
        function navegador() {
            var agente = window.navigator.userAgent;
            var navIde = false;
            //var navegadores = ["Chrome", "Firefox", "Safari", "Opera", "Trident" "Edge"];
            var navegadores = ["Trident", "MSIE"];
            for (var i in navegadores) {
                if (agente.indexOf(navegadores[i]) != -1) {
                    navIde = true;
                }
            }

            return navIde;
        }

        var browser = document.getElementById("navegador");

        $(document).ready(function () {
            if (navegador() == true) {
                location.href = '@Url.Action("ErrorNavegador", "ErrorPage")';
            }
        });
    </script>
